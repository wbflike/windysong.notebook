@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using WindySong.NoteBook.Web.Common
@model WindySong.NoteBook.App.ViewModels.Admin.SysConfigModel
@using WindySong.NoteBook.Web.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@WebSiteSysConfig.siteName</title>
    <meta name="keywords" content="@WebSiteSysConfig.siteKeyWords">
    <meta name="description" content="@WebSiteSysConfig.siteDescription">
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="~/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="~/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css?v=4.1.0" rel="stylesheet">
    <link href="~/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>网站信息配置 <small></small></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form method="post" id="myform" class="form-horizontal" asp-controller="AdminSysConfig" asp-action="Index">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">网站名称</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="siteName">
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Keywords</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="siteKeyWords"> <span class="help-block m-b-none">网站关键字</span>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    <input type="text"  class="form-control" asp-for="siteDescription"><span class="help-block m-b-none">网站描述</span>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button id="submitForm" class="btn btn-primary" type="button">保存内容</button>
                                </div>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="~/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/js/bootstrap.min.js?v=3.3.6"></script>
    <!-- 自定义js -->
    <script src="~/js/content.js?v=1.0.0"></script>
    <!-- Sweet alert -->
    <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#submitForm").click(function () {
                $.ajax({
                    url: '/AdminSysConfig/Index',
                    type: 'post',
                    dataType: 'json',
                    data: $("#myform").serialize(),
                    cache: false,                   
                    error: erryFunction,  //错误执行方法    
                    success: succFunction//成功执行方法
                });
            });
            function erryFunction() {
                swal({
                    title: "请求失败",
                    text: "error",
                    type: "error"
                });
            }
            function succFunction(data) {
                //获取返回的json数据
                var state = data.state;
                var str = data.str;
                if (state == 1)
                {
                    swal({
                        title: "保存成功",
                        text: str,
                        type: "success"
                    });
                }
                if (state == 0)
                {
                    swal({
                        title: "保存失败",
                        text: str,
                        type: "error"
                    });
                }
            }
        });
    </script>
</body>
</html>
